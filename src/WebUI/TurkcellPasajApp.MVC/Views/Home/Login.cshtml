<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Login</h2>
                        <form asp-controller="Home" asp-action="Login" method="post">
                            <div class="mb-3">
                                <input type="text" class="form-control" id="username" name="username" required placeholder="Kullanıcı adı">
                            </div>
                            <div class="mb-3">
                                <input type="password" class="form-control" id="password" name="password" required placeholder="Şifre">
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Giriş Yap</button>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <a href="#" onclick="showRegisterOptions()">Yeni Hesap Oluştur</a>
                            <div id="registerOptions" style="display: none;">
                                <button class="btn btn-primary mt-2" onclick="redirectToRegister('customer')">Müşteri Hesabı</button>
                                <button class="btn btn-primary mt-2" onclick="redirectToRegister('seller')">Satıcı Hesabı</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showRegisterOptions() {
            var registerOptionsDiv = document.getElementById('registerOptions');
            if (registerOptionsDiv.style.display === 'none') {
                registerOptionsDiv.style.display = 'block';
            } else {
                registerOptionsDiv.style.display = 'none';
            }
        }

        function redirectToRegister(option) {
            var url = option === 'customer' ? '/Customer/Register' : '/Seller/Register';
            window.location.href = url;
        }
    </script>
</body>
</html>
