<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Head içeriği buraya gelecek -->
    <link href="~/css/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        .icon-hover:hover {
            border-color: #3b71ca !important;
            background-color: white !important;
        }

            .icon-hover:hover i {
                color: #3b71ca !important;
            }

        footer {
            position: relative; /* Sayfanın en altında sabit bir şekilde duracak */
            left: 0;
            bottom: 0;
            width: 100%;
            height: auto; /* Footer yüksekliğini buradan ayarlayabilirsiniz */
            background-color: #343a40; /* İstediğiniz arkaplan rengini burada belirtebilirsiniz */
            color: white; /* Bu kısım metinlerin rengini beyaz yapar */
            padding: 15px;
        }

        body {
            padding-bottom: 20px; /* Footer yüksekliği kadar padding-bottom ekleyerek sayfanın içeriğini kapatmadan footer'ı aşağıda tutuyoruz */
        }
    </style>


</head>

<body>
    <!-- Header içeriği buraya gelecek -->
    <!-- Header içeriği buraya gelecek -->
    <header>
        <!-- Main Navigation içeriği buraya gelecek -->
        <div class="p-3 text-center bg-white border-bottom">
            <div class="container">
                <div class="row gy-3">
                    <!-- Sol kısım -->
                    <div class="col-lg-2 col-sm-4 col-4">
                        <a href="/Home/Index" class="float-start">
                            <img src="/Img/pasaj-logo-new.jpg" height="35" />
                        </a>
                    </div>
                    <!-- Sol kısım -->
                    <!-- Orta kısım -->
                    <div class="order-lg-last col-lg-5 col-sm-8 col-8">
                        <div class="d-flex justify-content-between align-items-center flex-fill">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <!-- Sepet simgesini içeren div -->
                                <div class="position-relative">
                                    <a href="/Customer/Basket" class="border rounded py-1 px-3 nav-link d-flex align-items-center">
                                        <i class="fas fa-shopping-cart m-1 me-md-2"></i>
                                        <p class="d-none d-md-block mb-0">Sepetim</p>
                                    </a>
                                </div>
                                <!-- Profil ve Çıkış Yap linkleri -->
                                <a href="/Customer/Profile" class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center">
                                    <i class="fas fa-user m-1 me-md-2"></i>
                                    <p class="d-none d-md-block mb-0">Profilim</p>
                                </a>
                                <a href="/Home/Logout" class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center">
                                    <i class="fas fa-sign-out-alt m-1 me-md-2"></i>
                                    <p class="d-none d-md-block mb-0">Çıkış Yap</p>
                                </a>
                            }
                            else
                            {
                                <!-- Giriş Yap linki -->
                                <a href="/Home/Login" class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center">
                                    <i class="fas fa-user-alt m-1 me-md-2"></i>
                                    <p class="d-none d-md-block mb-0">Giriş Yap</p>
                                </a>
                            }
                        </div>

                    </div>
                    <!-- Orta kısım -->
                    <!-- Sağ kısım -->
                    <div class="col-lg-5 col-md-12 col-12">
                        <div class="input-group float-center">
                            <div class="form-outline">
                                <input type="search" id="form1" class="form-control" style="width: 400px;" placeholder="Ara">
                            </div>
                            <button type="button" class="btn btn-primary shadow-0" style="margin-left: -40px;">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>
                    </div>
                    <!-- Sağ kısım -->

                </div>
            </div>
        </div>
    </header>
    <!-- Header içeriği buraya gelecek -->
    <!-- Header içeriği buraya gelecek -->
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <!-- Container wrapper -->
        <div class="container justify-content-center justify-content-md-between">
            <!-- Toggle butonu -->
            <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarLeftAlignExample" aria-controls="navbarLeftAlignExample" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>

            <!-- Açılır menü -->
            <div class="collapse navbar-collapse" id="navbarLeftAlignExample">
                <!-- Sol linkler -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Categories">Kategoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mağazalar</a>
                    </li>
                </ul>
                <!-- Sol linkler -->
            </div>




        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->

    <script src="/js/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap/js/bootstrap.min.js"></script>

    @RenderBody()
    <!-- Footer -->
    <footer class="text-center text-lg-start text-muted bg-primary mt-3">
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start pt-4 pb-4">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-12 col-lg-3 col-sm-12 mb-2">
                        <!-- Content -->
                        <a href="https://mdbootstrap.com/" target="_blank" class="text-white h2">
                            Turkcell Pasaj
                        </a>
                        <p class="mt-1 text-white">
                            © 2023 Copyright: Turkcellpasaj.com
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-6 col-sm-4 col-lg-2">
                        <!-- Links -->
                        <h6 class="text-uppercase text-white fw-bold mb-2">
                            Store
                        </h6>
                        <ul class="list-unstyled mb-4">
                            <li><a class="text-white-50" href="#">About us</a></li>
                            <li><a class="text-white-50" href="#">Find store</a></li>
                            <li><a class="text-white-50" href="#">Categories</a></li>
                        </ul>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-6 col-sm-4 col-lg-2">
                        <!-- Links -->
                        <h6 class="text-uppercase text-white fw-bold mb-2">
                            Support
                        </h6>
                        <ul class="list-unstyled mb-4">
                            <li><a class="text-white-50" href="#">Help center</a></li>
                            <li><a class="text-white-50" href="#">Account restore</a></li>
                            <li><a class="text-white-50" href="#">My orders</a></li>
                        </ul>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->

        <div class="">
            <div class="container">
                <div class="d-flex justify-content-between py-4 border-top">
                    <!-- Ödeme simgeleri -->
                    <div>
                        <i class="fab fa-lg fa-cc-visa text-white"></i>
                        <i class="fab fa-lg fa-cc-amex text-white"></i>
                        <i class="fab fa-lg fa-cc-mastercard text-white"></i>
                        <i class="fab fa-lg fa-cc-paypal text-white"></i>
                    </div>
                    <!-- Ödeme simgeleri -->
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer -->

</body>
</html>
