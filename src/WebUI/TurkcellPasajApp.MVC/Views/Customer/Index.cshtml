@model TurkcellPasajApp.MVC.ViewModels.CustomerIndexPageViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Anasayfa";
}




<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        .favorite-button {
            background-color: #6c757d !important; /* Gri renk */
            border: none;
            outline: none;
        }

            .favorite-button.active {
                background-color: red !important; /* Kırmızı renk */
            }

            /* İkonun yatay ve dikey hizalama için */
            .favorite-button i {
                line-height: 1; /* Dikey hizalama */
            }

        #favorite-counter {
            font-size: 12px;
            min-width: 20px;
            height: 20px;
            padding: 3px;
        }

    </style>

</head>
<body>
    <div class="container">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
                    <div class="card w-100 my-2 shadow-2-strong">
                        <img src="/ProductPhotos/@product.PhotoUrl" class="card-img-top" style="aspect-ratio: 1 / 1" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">₺@product.Price</p>
                            <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">

                                <!-- Sepet butonu -->
                                <button class="btn btn-primary shadow-0 me-1" onclick="addToBasket(@product.Id)">Sepete Ekle</button>
                                <!-- Sepet butonu -->
                                <!-- Detay butonu -->
                                <a class="btn btn-primary shadow-0 me-1" asp-controller="Home" asp-action="ProductDetail" asp-route-productId="@product.Id">Detay</a>
                                <!-- Detay butonu -->
                                <!-- Favori butonu -->
                                <div class="ml-auto">
                                    @if (Model.Favourites.Any(f => f.FavouriteProductId == product.Id && f.IsFavourite == true))
                                    {
                                        <button class="btn btn-secondary favorite-button active px-1" data-productid="@product.Id" onclick="addToFavorites(@product.Id)">
                                            <i class="fas fa-heart fa-lg text-white"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary favorite-button px-1" data-productid="@product.Id" onclick="addToFavorites(@product.Id)">
                                            <i class="fas fa-heart fa-lg text-white"></i>
                                        </button>
                                    }
                                </div>
                                <!-- Favori butonu -->

                            </div>


                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="/js/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap/js/bootstrap.min.js"></script>

    <script>

        //Favorilere ekleme yada çıkarma işlemleri
        function addToFavorites(productId) {
            $.ajax({
                type: "POST",
                url: "/Customer/AddToFavorites",
                data: { productId: productId },
                success: function (data) {
                    if (data.success) {
                        // Favori butonunun aktiflik durumunu değiştirin
                        const favoriteButton = $(`button[data-productid="${productId}"]`);
                        favoriteButton.toggleClass("active");
                    }
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }
        // Ürünleri sepete ekleyen  fonksiyon
        function addToBasket(productId) {
            $.ajax({
                type: "POST",
                url: "/Customer/AddToBasket",
                data: { productId: productId },
                success: function (data) {
                    if (data.success) {
                        // Başarılı ekleme pop-up mesajı göster
                        showPopup("Ürün başarıyla sepete eklendi.");
                    }
                },
                error: function (xhr, status, error) {
                    showPopup("Ürün sepete daha önce eklenmiştir.");
                    console.error(error);
                }
            });
        }
        // showPopup fonksiyonunu tanımla
        function showPopup(message) {
            alert(message);
            setTimeout(function () {
            }, 3000); // 3000 milisaniye (3 saniye) sonra kapatılacak
        }
    </script>
</body>
</html>
