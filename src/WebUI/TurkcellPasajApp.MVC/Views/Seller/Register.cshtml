<!DOCTYPE html>
<html>
<head>
    <title>Hesap Oluştur</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .tab-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .tab-buttons {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

            .tab-buttons button {
                margin: 0 10px;
            }

        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="form-container">
                    <!-- Satıcı Hesabı Oluştur İçeriği -->
                    <div>
                        <h2>Satıcı Hesabı Oluştur</h2>
                        <form asp-controller="Seller" asp-action="Register" method="post">
                            <!-- Satıcı hesabı için gerekli alanlar -->
                            <div class="mb-3">
                                <input type="text" class="form-control" name="Name" required placeholder="Ad" maxlength="20">
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" name="Email" required placeholder="E-posta">
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" name="Username" required placeholder="Kullanıcı Adı" maxlength="20">
                            </div>
                            <div class="mb-3">
                                <input type="password" class="form-control" name="Password" required placeholder="Şifre" maxlength="20">
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" name="Phone" required placeholder="Telefon">
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" name="Address" required placeholder="Adres" maxlength="300">
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success">Kayıt Ol</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
