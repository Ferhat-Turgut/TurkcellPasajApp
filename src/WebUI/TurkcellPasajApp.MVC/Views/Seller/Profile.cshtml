@model TurkcellPasajApp.DataTransferObjects.Responses.SellerDisplayResponseDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Profil";
}

<div class="container mt-5">
    <h1 class="mb-4">Profil</h1>

    <div class="row mb-5">
        <div class="col-md-6">
            <h2>Temel Bilgiler</h2>
            <div class="row mb-3">
                <div class="col-md-4">Kullanıcı Adı:</div>
                <div class="col-md-8">@Model.Username</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">Ad:</div>
                <div class="col-md-8">@Model.Name</div>
            </div>
        </div>
        <div class="col-md-6">
            <h2>İletişim Bilgileri</h2>
            <div class="row mb-3">
                <div class="col-md-4">Email:</div>
                <div class="col-md-8">@Model.Email</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">Telefon:</div>
                <div class="col-md-8">@Model.PhoneNumber</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">Adres:</div>
                <div class="col-md-8">@Model.Address</div>
            </div>
        </div>
    </div>


    <!-- Profili düzenleme veya diğer işlemler için düğmeler -->
    <div class="mb-4">
        <a href="/Seller/EditProfile" class="btn btn-primary">Profili Düzenle</a>
    </div>
</div>


